#include <iostream>
#include <string.h>
#include <cstdlib>
#include <stdio.h>
using namespace std;
#define MAX 100
void numeroDatos(int &n);
int busqueda(char codigo[][60],char nombre[][20],float saldo[],int n);
void ingresoDatos(char codigo[][60],char nombre[][60],float saldo[],int n);
void crearCuenta(char codigo[][60],char nombre[][60],float saldo[],int &n);
void consultarSaldo(char codigo[][60],char nombre[][60],float saldo[],int n);
void depositarSaldo(char codigo[][60],char nombre[][60],float saldo[],int n);
void retirarSaldo(char codigo[][60],char nombre[][60],float saldo[],int n);
void mostrarCuentas(char codigo[][60],char nombre[][60],float saldo[],int n);
int main(int argc, char *argv[]) {
	int n,opcion;
	char codigo[MAX][60],nombre[MAX][60]; 
	float saldo[MAX];
	system("cls");
	cout<<"Ingresamos Datos de Clientes de un Banco"<<endl;
	numeroDatos(n);
	ingresoDatos(codigo,nombre,saldo,n);
	do{
		system ("cls");
		cout<<"MENU DEL BANCO"<<endl;
		cout<<"[1] Crear nueva cuenta"<<endl;
		cout<<"[2] Consultar saldo"<<endl;
		cout<<"[3] Depositar saldo"<<endl;
		cout<<"[4] Retirar Saldo"<<endl;
		cout<<"[5] Mostrar todas las cuentas"<<endl;
		cout<<"[6] Salir"<<endl;
		cout<<"Ingrese opcion (1-6): ";
		cin>>opcion;
		cin.get();
		switch(opcion){
		case 1: crearCuenta(codigo,nombre,saldo,n); break;
		case 2: consultarSaldo(codigo,nombre,saldo,n); break;
		case 3: depositarSaldo(codigo,nombre,saldo,n); break;
		case 4: retirarSaldo(codigo,nombre,saldo,n); break;
		case 5: mostrarCuentas(codigo,nombre,saldo,n); break;
		}
	} while(opcion!=6);
	return 0;
}
void numeroDatos(int &n){
	do{
		cout<<"Ingrese el total de clientes: "; 
		cin>>n;
		if(n<=0)
			cout<<"La cantidad de clientes debe ser un numero entero positivo"<<endl;
	} while(n<=0);
}
int busqueda(char codigo[][60],int n,char nom[]){
	int i;
	for(i=0;i<n;i++){
		if (strcmp(codigo[i],nom)==0)
			return i;
	}
	return -1;
}
void ingresoDatos(char codigo[][60],char nombre[][60],float saldo[],int n){
	int i=0;
	while(i<n){
		cout<<"Ingrese datos del cliente "<<i+1<<" : "<<endl;
		cout<<"Ingrese su nombre: ";
		cin.getline(nombre[i],60);
		cin.get();
		cout<<"Ingrese su codigo: ";
		cin.getline(codigo[i],60);
		cin.get();
		cin.get();
		cout<<"Ingrese su saldo: ";
		cin>>saldo[i];
		i++;
	}
}
void crearCuenta(char codigo[][60],char nombre[][60],float saldo[],int &n){
	cout<<"Ingrese datos del nuevo cliente"<<endl;
	cout<<"Ingrese su nombre: ";
	cin.getline(nombre[n],60);
	cout<<"Ingrese su codigo: ";
	cin.getline(codigo[n],60);
	cout<<"Ingrese su saldo: ";
	cin>>saldo[n];
	n++;
}
void consultarSaldo(char codigo[][60],char nombre[][60],float saldo[],int n){
	char nom[60];
	int p;
	cin.get();
	cout<<"Ingrese codigo del cliente: ";
	cin.getline(nom,60);
	cin.get();
	p=busqueda(codigo,n,nom);
	if (p!=-1){
		cout<<"Datos del Cliente"<<endl;
		cout<<"Codigo: "<<codigo[p]<<endl;
		cout<<"Nombre "<<nombre[p]<<endl;
		cout<<"EL Saldo del Cliente es: "<<saldo[p]<<endl;
	}
	else
		cout<<"El codigo no se encuentra"<<endl;
}
void depositarSaldo(char codigo[][60],char nombre[][60],float saldo[],int n){
	char  nom[60];
	float deposito;
	int p;
	cout<<"Ingrese codigo del cliente: ";
	cin.getline(nom,60);
	cin.get();
	p=busqueda(codigo,n,nom);
	if (p!=-1){
		cout<<"Datos del Cliente"<<endl;
		cout<<"Codigo: "<<codigo[p]<<endl;
		cout<<"Nombre "<<nombre[p]<<endl;
		cout<<"Saldo: "<<saldo[p]<<endl;
		cout<<"Ingrese cuanto de saldo depositara: ";
		cin>>deposito;
		saldo[p]=saldo[p]+deposito;
		cout<<"EL saldo nuevo es: "<<saldo[p];
	}
	else
		cout<<"El codigo no se encuentra"<<endl;
}
void retirarSaldo(char codigo[][60],char nombre[][60],float saldo[],int n){
	char  nom[60];
	float retiro;
	int p;
	cout<<"Ingrese codigo del cliente: ";
	cin.getline(nom,60);
	cin.get();
	p=busqueda(codigo,n,nom);
	if (p!=-1){
		cout<<"Datos del Cliente"<<endl;
		cout<<"Codigo: "<<codigo[p]<<endl;
		cout<<"Nombre "<<nombre[p]<<endl;
		cout<<"Saldo: "<<saldo[p]<<endl;
		cout<<"Ingrese cuanto de saldo retirara: ";
		cin>>retiro;
		saldo[p]=saldo[p]-retiro;
		cout<<"EL saldo nuevo es: "<<saldo[p];
	}
	else
		cout<<"El codigo no se encuentra"<<endl;
}
void mostrarCuentas(char codigo[][60],char nombre[][60],float saldo[],int n){
	int i;
	cout<<"Datos de Todas las Personas: "<<endl;
	for(i=0;i<n;i++){
		cout<<"\n\t";
		cout<<codigo[i]<<",\t "<<nombre[i]<<",\t "<<saldo[i]<<endl;
	}
}
